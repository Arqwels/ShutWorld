{
  "version": 2,
  "builds": [
    { "src": "./api/periodic-task.js", "use": "@vercel/node" },
    { "src": "./index.js", "use": "@vercel/node" }
  ],
  "routes": [{ "src": "/api/(.*)", "dest": "/api/$1" }],
  "functions": {
    "periodic-task": {
      "schedule": "*/5 * * * *",
      "runtime": "@vercel/node",
      "memory": 128,
      "maxDuration": 30
    }
  }
}